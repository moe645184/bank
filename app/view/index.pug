doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title 銀行
  body
    a(href="/bank") 換帳號
    p 你好#{account}
    p 目前餘額： #{balance} 元
    button #[a(href='/bank/history') 交易紀錄明細]
    p 選擇存提款
    button(onclick='deposit()') 存款
    button(onclick='withdraw()') 提款
    form(class='lightbox' action='/deposit' method='post' style='display:none')
      h2
      p 從#[input(type='text' name='from')]到#[input(type='text' name='to')]
      input(type="text" name='amount' pattern="[0-9]+([\.][0-9]+)?" title="只能輸入大於0的數字")
      input(type='submit' value='確定')

    script.
      const form = document.querySelector('form')
      const h2 = document.querySelector('h2')

      function deposit(){
        form.action = '/bank/deposit'
        form.style.display = 'block'
        h2.innerHTML='存款'
      }

      function withdraw(){
        form.action = '/bank/withdraw'
        form.style.display = 'block'
        h2.innerHTML='提款'
      }
