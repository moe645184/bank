doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title 登入畫面
  body
    section
      form(action='/check' method='post')
        h2 登入帳號
        label(for='account') 帳號#[input(type='text' id='account' name='account' required)]
        br
        label(for='password') 密碼#[input(type='password' id='password' name='password' required)]
        br
        input(type='submit' value='登入')
        button #[a(href='/register') 註冊]
